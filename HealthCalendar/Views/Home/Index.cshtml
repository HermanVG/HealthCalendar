<!--
    Home/Index.cshtml
    - Landing page for HealthCalendar
    - Uses Bootstrap 5 for layout and styling
    - Shows a large title, subtitle, and two login buttons
-->
<div class="container py-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-lg-7 text-center">
            <!-- Main page heading -->
            <h1 class="display-4 mb-4">Welcome to HealthCalendar</h1>
            <!-- Subtitle/description -->
            <p class="lead mb-4">Book Your Next Appointment With HealthCalendar</p>
            <!-- Login buttons for Patient and Worker -->
            <div class="d-flex justify-content-center gap-3 mb-4">
                <a asp-controller="Patient" asp-action="Login" class="btn btn-primary btn-lg">Patient Login</a>
                <a asp-controller="Worker" asp-action="Login" class="btn btn-outline-primary btn-lg">Worker Login</a>
            </div>
        </div>
    </div>
</div>