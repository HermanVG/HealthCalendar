<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HealthCalendar</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-light border-bottom mb-3">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">HealthCalendar</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-sm-0">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            @* For Patient users *@
                            if (User.IsInRole("Patient"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Event" asp-action="PatientEvents">My Events</a>
                                </li>
                            }

                            @* Logout button *@
                            <li class="nav-item">
                                <form class="d-inline" asp-controller="Patient" asp-action="Logout" method="post">
                                    <button type="submit" class="btn btn-link nav-link text-dark">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Patient" asp-action="Login">Patient Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Worker" asp-action="Login">Worker Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @* TempData alerts *@
            @if (TempData["Message"] != null)
            {
                <div class="alert @(TempData["AlertType"] ?? "alert-info")" role="alert">
                    @TempData["Message"]
                </div>
            }

            @RenderBody()
        </main>
    </div>

    <!-- Bootstrap JS Bundle -->
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
