@using HealthCalendar.Models
@model IEnumerable<Event>

<!--
	PatientEvents.cshtml
	- Lists all events for the logged-in patient
	- Uses Bootstrap 5 for layout and styling
	- Uses the _EventTable partial view to render the table rows
-->

<div class="container py-5">
	<div class="row mb-4">
		<div class="col-12 d-flex justify-content-between align-items-center">
			<!-- Page heading -->
			<h2 class="mb-0">Your Events</h2>
			<!-- Button to create a new event -->
			<a asp-controller="Event" asp-action="AddEvent" class="btn btn-primary">Create New Event</a>
		</div>
	</div>
	<div class="row">
		<div class="col-12">
			<!-- Render the event table using the partial view -->
			@await Html.PartialAsync("_EventTable", Model)
		</div>
	</div>
</div>
