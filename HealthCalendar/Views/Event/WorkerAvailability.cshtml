@model IEnumerable<WorkerAvailability>

@{
    ViewData["Title"] = "Your Availability";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="card-title mb-4">Your available dates</h2>
                    
                    @if (Model != null && Model.Any())
                    {
                        foreach (var availability in Model)
                        {
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span>Date: @availability.Date.ToString("dd.MM.yyyy")</span>
                                <form asp-controller="Event" asp-action="DeleteAvailability" method="post" class="d-inline">
                                    <input type="hidden" name="availabilityId" value="@availability.AvailabilityId" />
                                    <button type="submit" class="btn btn-outline-danger btn-sm">Delete</button>
                                </form>
                            </div>
                        }
                    }

                    <div class="mt-4">
                        <button class="btn btn-primary mb-3">Get your available dates</button>
                        
                        <div class="mt-4">
                            <h5>Add new date:</h5>
                            <div class="input-group mb-3">
                                <input type="date" class="form-control" />
                                <button class="btn btn-primary">Add date</button>
                            </div>
                        </div>
                    </div>

                    <div class="mt-4">
                        <a asp-controller="Event" asp-action="WorkerEvents" class="btn btn-outline-secondary">Go back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
